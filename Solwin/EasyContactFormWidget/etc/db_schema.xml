<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="solwin_form_data" resource="sales" engine="innodb" comment="Esay Contact Form Detail">
        <column xsi:type="int" name="id" nullable="false" identity="true" comment="ID"/> 
        <column xsi:type="varchar" name="name" nullable="false" comment="Name"/> 
        <column xsi:type="varchar" name="gender" nullable="false" comment="Gender"/> 
        <column xsi:type="date" name="dob" nullable="false" comment="DOB"/> 
        
        <column xsi:type="varchar" name="query" nullable="false" comment="Query"/> 
        <column xsi:type="varchar" name="message" nullable="false" comment="Message"/> 
        <constraint xsi:type="primary" referenceId="PRIMARY">
    		<column name="id"/>
		</constraint>
    </table>
</schema>
